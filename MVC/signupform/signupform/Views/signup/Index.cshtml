<h1>Sign up form</h1>
@model signupform.Models.signup
@using (Html.BeginForm("index", "signup", FormMethod.Post))
{

    <h2>enter signup details</h2>
    <br />
    <span>username: </span> @Html.TextBoxFor(m => m.username)
    <br />
    <span>password: </span> @Html.PasswordFor(m => m.password)
    <br />

    <span>email: </span> @Html.TextBoxFor(m => m.email)
    <br />
    <span>Male: </span> @Html.RadioButtonFor(m=>m.gender,"male")
    <span> | Female: </span> @Html.RadioButtonFor(m => m.gender,"female")

    <br />
    <span>subject1: </span> @Html.CheckBoxFor(m=>m.subject1,true)
    <span> | subject2: </span> @Html.CheckBoxFor(m => m.subject2,false)

    <br />
    <input type="submit" value="ok" />

}
<hr />
